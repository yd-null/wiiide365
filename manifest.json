{
    "manifest_version": 3,
    "name": "wiiide365",
    "description": "Wide global search bar for Dynamics 365",
    "version": "1.0",
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": "images/arrow-128.png"
    },
    "content_scripts": [
        {
            "matches": ["https://*.crm6.dynamics.com/*"],
            "css": ["styles.css"],
            "run_at": "document_idle"
        }
    ]
}
