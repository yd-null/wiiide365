{
    "manifest_version": 3,
    "name": "wiiideDynamics365",
    "description": "Wide global search results bar for Dynamics 365",
    "version": "1.0",
    "icons": {
        "16": "images/arrow-16.png",
        "48": "images/arrow-48.png",
        "128": "images/arrow-128.png"
    },
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": "images/arrow-128.png"
    },
    "content_scripts": [
        {
            "matches": ["https://*.dynamics.com/*"],
            "css": ["styles.css"],
            "run_at": "document_idle"
        }
    ]
}
